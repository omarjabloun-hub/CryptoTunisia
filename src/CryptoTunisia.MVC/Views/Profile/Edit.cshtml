@model User

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<form asp-action="Edit" asp-route-returnUrl="@Model" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Email">New email</label>
            <input asp-for="Email" class="form-control" value="@Model.Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">New password</label>
            <input asp-for="Password" class="form-control" value="@Model.Password"/>
            <span asp-validation-for="Password"></span>
        </div>
    <button class="btn btn-info" type="submit"> Submit</button>
    </form>
