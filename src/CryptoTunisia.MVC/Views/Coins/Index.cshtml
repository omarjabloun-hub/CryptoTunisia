@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="h3 text-muted">My Favorite</div>
    <div id="starred" class="bg-white px-2 pt-1 mt-2">
        <div class="table-responsive">
            <table class="table">
                <tbody>
                <tr>
                                        <td>
                                            <div class="d-flex mt-2 border-right">
                                                <div class="box p-2 rounded">
                                                    <span class="fas fa-star text-primary px-1"></span>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <div class="text-muted">Name</div>
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <img src="https://freepngimg.com/thumb/bitcoin/59703-classic-bitcoin-virtual-cryptocurrency-currency-ethereum.png"
                                                             alt="" class="icons">
                                                    </div>
                                                    <b class="pl-2">@ViewBag.coins[1].Name</b>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <div class="text-muted">Market cap</div>
                                                <div>
                                                    <b>@ViewBag.coins[1].MarketCap</b>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <div class="text-muted">Price</div>
                                                <div>
                                                    <b>@Math.Round(ViewBag.coins[1].Price,3) $</b>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <div class="d-flex align-items-center labels">
                                                    <div class="text-muted">Volume</div>
                                                    <div class="green-label mx-1 px-1 rounded">74</div>
                                                </div>
                                                <div>
                                                    <b>@ViewBag.coins[1].Volume</b>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                @if (100 - ViewBag.coins[1].PercentChange24H > 0)
                                                {
                                                    <div>
                                                        <b class="green">@(Math.Round(100 - ViewBag.coins[1].PercentChange24H,2)) %</b>
                                                    </div>
                                                }
                                                @if (100 - ViewBag.coins[1].PercentChange24H < 0)
                                                {
                                                    <div>
                                                        <b class="red">@Math.Round(100 - ViewBag.coins[1].PercentChange24H,2)) %</b>
                                                    </div>
                                                }

                                            </div>
                                        </td>
                                        <td>
                                            <div class="graph">
                                                <img src="https://freepngimg.com/thumb/stock_market/25650-5-stock-market-graph-up-transparent-background.png"
                                                     alt="">
                                                <div class="dot"></div>
                                            </div>
                                        </td>
                                    </tr>

                </tbody>
            </table>
        </div>
    </div>
    <div class="d-lg-flex align-items-lg-center py-4">
        <div class="h3 text-muted">Top Cryptocurrency Prices</div>
    </div>
    <div id="top">
        <div class="bg-white table-responsive">
            <table class="table">
                <tbody>
                @foreach (var coin in (ViewBag.coins))
                {
                    <tr>
                        <td>
                            <div class="d-flex mt-2 border-right">
                                <div class="box p-2 rounded">
                                    <span class="fas fa-star text-primary px-1"></span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex flex-column">
                                <div class="text-muted">Name</div>
                                <div class="d-flex align-items-center">
                                    <div>
                                        <img src="https://www.freepnglogos.com/uploads/bitcoin-png/bitcoin-all-about-bitcoins-9.png"
                                             alt="" class="icons">
                                    </div>
                                    <b class="pl-2">@coin.Name</b>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex flex-column">
                                <div class="text-muted">Market cap</div>
                                <div>
                                    <b>@coin.MarketCap</b>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex flex-column">
                                <div class="text-muted">Price</div>
                                <div>
                                    <b>@Math.Round(coin.Price,2) $</b>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex flex-column">
                                <div class="d-flex align-items-center labels">
                                    <div class="text-muted">Volume</div>
                                    <div class="green-label mx-1 px-1 rounded">74</div>
                                </div>
                                <div>
                                    <b>@coin.Volume</b>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex flex-column">
                                @if (100 - coin.PercentChange24H > 0)
                                {
                                    <div>
                                        <b class="green">@Math.Round(100 - coin.PercentChange24H,2) %</b>
                                    </div>
                                }
                                @if (100 - coin.PercentChange24H < 0)
                                {
                                    <div>
                                        <b class="red">@Math.Round(100 - coin.PercentChange24H,2) %</b>
                                    </div>
                                }

                            </div>
                        </td>
                        <td>
                            <div class="graph">
                                <img src="https://freepngimg.com/thumb/stock_market/25650-5-stock-market-graph-up-transparent-background.png"
                                     alt="">
                                <div class="dot"></div>
                            </div>
                        </td>
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
</div>
